{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "module": "ES6",
    "moduleResolution": "Node",
    "target": "ES2020",
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "declaration": true
  }
}